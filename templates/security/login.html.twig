{% extends 'base_login.html.twig' %}

{% block title %}Login page{% endblock %}

{% block body %}
<style>
    .error{color: red}
</style>
    {% for message in app.flashes('succes_registration') %}
        <br>
        <div class="fade animated flash">
            <div class="alert alert-dismissible alert-info fade show">
                <button type="button" class="close" data-dismiss="alert">&times;</button>
                <div class="text-center">{{ message }}</div>
            </div>
        </div>
    {% endfor %}
<div class="example-wrapper">
    <hr>
    <h4>Login page</h4>
    <hr>
    {% if error %}
      <span class="error">{{ error.messageKey }}</span>
    {% endif %}
    <form action="{{ path('login') }}" method="POST">
        <div class="form-group">
            <label for="_username">Username</label>
            <input type="text" name="_username" class="form-control" placeholder="Username ..." required value="{{last_username}}">
        </div>
        <div class="form-group">
            <label for="_password">Password</label>
            <input type="password" name="_password"  placeholder="Password ..." class="form-control" required>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion !</button>
            <a href="{{ path('registration') }}" class="btn btn-link">I do not have an account yet !</a>
        </div>
    </form>
</div>
{% endblock %}
