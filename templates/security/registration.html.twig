{% extends 'base_login.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}

    <div class="container">
        <hr>
        <h4>Registration page</h4>
        <hr>

        {{ form_start(form) }}

                    {{ form_row(form.username, {'attr':{'placeholder':"Enter your Username..."}}) }}
                    {{ form_row(form.email, {'attr':{'placeholder':"Enter your Email..."}}) }}
                    {{ form_row(form.password, {'attr':{'placeholder':"Enter your password..."}}) }}
                    {{ form_row(form.confirm_password, {'attr':{'placeholder':"Repeat your password..."}}) }}
                    <button type="submit" class="btn btn-success">Registration !</button>


        {{ form_end(form) }}

    </div>

{% endblock %}